<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/hinhsp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/category_test" />

    <TextView
        android:id="@+id/tvtenmonan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Tên món ăn"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/hinhsp"
        app:layout_constraintTop_toTopOf="@+id/hinhsp" />

    <TextView
        android:id="@+id/tvthanhtien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Thành tiền"
        android:textSize="16sp"
        android:textColor="@color/colorDarkGrey"
        app:layout_constraintBottom_toBottomOf="@+id/tvdongia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvdongia" />

    <TextView
        android:id="@+id/tvsoluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Số lượng"
        app:layout_constraintStart_toEndOf="@+id/hinhsp"
        app:layout_constraintTop_toBottomOf="@+id/tvtenmonan" />

    <TextView
        android:id="@+id/tvdongia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="đơn giá"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/hinhsp"
        app:layout_constraintTop_toBottomOf="@+id/tvsoluong" />

</androidx.constraintlayout.widget.ConstraintLayout>