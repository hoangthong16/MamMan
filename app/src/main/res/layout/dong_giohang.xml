<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/layout_bg"
    >

    <ImageView
        android:id="@+id/anhsp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tensp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Tên"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/anhsp"
        app:layout_constraintTop_toTopOf="@+id/anhsp" />

    <TextView
        android:id="@+id/giasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Giá"
        android:textSize="18dp"
        android:textColor="#D31B1B"
        app:layout_constraintStart_toEndOf="@+id/anhsp"
        app:layout_constraintTop_toBottomOf="@+id/tensp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/sub"
        android:textColorLink="#9C4545"
        app:backgroundTint="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/soluong"
        app:layout_constraintEnd_toStartOf="@+id/soluong"
        app:layout_constraintTop_toTopOf="@+id/soluong" />

    <TextView
        android:id="@+id/soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/anhsp"
        app:layout_constraintEnd_toStartOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/giasp" />

    <Button
        android:id="@+id/add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/add"
        android:textColor="#B35F5F"
        app:backgroundTint="@color/colorOrange"
        app:layout_constraintBottom_toBottomOf="@+id/soluong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/soluong" />


</androidx.constraintlayout.widget.ConstraintLayout>